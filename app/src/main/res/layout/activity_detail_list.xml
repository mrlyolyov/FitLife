<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context="fit.life.com.fitlife.DetailListActivity">

    <TextView
        android:layout_width="match_parent"
        android:textSize="40sp"

        android:text="СИРЕНИЕ"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ProducName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Цена:"
        android:id="@+id/textView"
        android:layout_below="@+id/ProducName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Белтъчини:"
        android:id="@+id/textView2"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Въглехидрати:"
        android:id="@+id/textView3"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Мазнини:"
        android:id="@+id/textView4"
        android:layout_marginTop="32dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Калории:"
        android:id="@+id/textView5"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Стойност"
        android:id="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Стойност"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignEnd="@+id/textView6"/>

    <include layout="@layout/line"
             android:layout_height="1dp"

             android:layout_width="match_parent"
             android:layout_below="@id/textView4"
             />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Стойност"
        android:id="@+id/textView8"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/textView7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Стойност"
        android:id="@+id/textView9"
        android:layout_above="@+id/textView5"
        android:layout_alignEnd="@+id/textView6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Стойност"
        android:id="@+id/textView10"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignEnd="@+id/textView9"/>

    <include
        layout="@layout/line"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true"/>

    <include
        layout="@layout/line"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"/>

    <include
        layout="@layout/line"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"/>

    <include
        layout="@layout/line"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/textView2"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"/>


</RelativeLayout>
